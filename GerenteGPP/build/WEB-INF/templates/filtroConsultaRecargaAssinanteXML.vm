#parse("menuVertical.vm")
<h6><b>Consulta de Recarga de Assinante (XML)</b></h6>
<form name="frm" action="consultaRecargaAssinanteXML.do" method="post">
  <table width="100%">
	<tr>
		<td> Código do Assinante</td>
		<td><input type="text" name="msisdn" maxlength="13" onKeyPress="formataMsisdn(this,event);return soNumeros(event);" onBlur="this.value=formataMsisdn2(this.value);" /></td>
	</tr>
	<tr>
		<td> Valor total de recarga a ser comprada</td>
		<td><input type="text" name="valor" onKeyPress="this.value=formataMoeda(this.value, event); return soNumeros(event);" onBlur="this.value=formataMoeda2(this.value);"/></td>
	</tr>
	<tr>
		<td> CPF </td>
		<td><input type="text" name="cpf" maxlength="14" onKeyPress="formata_cpf(this,event);"/></td>
	</tr>
	<tr>
		<td> Categoria do cliente(0-Pos-pago, 1-Hibrido, 2-Pre-pago, 9-Null):</td>
		<td><input type="text" name="categoria" maxlength="1" onKeyPress="return soNumeros(event);"/></td>
	</tr>
	<tr>
		<td> Hash Code do Cartao de Credito a ser utilizado:</td>
		<td><input type="text" name="hashCartao" /></td>
	</tr>
	<tr>
		<td> Sistema de origem</td>
		<td><select NAME="sistemaOrigem" SIZE="1" >
			<option value="TEC" selected>Tecnomen</option>
	        <option value="CRM">Clarify</option>
	        <option value="PBT">Portal BrT Celular</option>
	        <option value="MIC">Microsiga</option>
	        <option value="GNV">Geneva</option>
	        <option value="BCO">Bancos</option>
	        <option value="XXX">Testes</option>
	        <option value="PPP">Portal Pré-pago</option>
	        <option value="GPP">Gateway Pré-pago</option>
	      </select></td>
	</tr>
	<tr>
		<td><input type="button" value="Pesquisar" onclick="javascript:validaEntrada()"/></td>
		<td><input type="reset" value="Limpar" /></td>
	</tr>
  </table>
</form>
</td>
</tr>
</table>
<script language="javascript">
  
  function validaEntrada()
  {
  	if ( valida(frm))
  		if ( validaMsisdn(frm.msisdn.value)	&& validacpf(frm.cpf) )
  			document.frm.submit();
  }
  
</script>