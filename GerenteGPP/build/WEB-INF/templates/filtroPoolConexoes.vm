<script language="javaScript">
function efetuaAcao(_nomePool, _tipoPool, _acao) 
{
  document.frm.nomePool.value = _nomePool;  
  document.frm.tipoPool.value = _tipoPool;
  document.frm.acao.value = _acao;
  document.frm.submit();
}
</script>